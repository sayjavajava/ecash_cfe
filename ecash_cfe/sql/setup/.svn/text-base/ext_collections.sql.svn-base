CREATE TABLE IF NOT EXISTS `ext_collections` (
  `date_modified` timestamp NOT NULL default CURRENT_TIMESTAMP,
  `date_created` timestamp NOT NULL default '0000-00-00 00:00:00',
  `company_id` int(10) unsigned NOT NULL,
  `application_id` int(10) unsigned NOT NULL,
  `ext_collections_id` int(10) unsigned NOT NULL,
  `ext_collections_batch_id` int(10) unsigned NOT NULL,
  `current_balance` decimal(7,2) NOT NULL,
  PRIMARY KEY  (`ext_collections_id`)
);
